<div class="slideshow-container">
    <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
    <a class="next" onclick="plusSlides(1)">&#10095;</a>

    {% for animal in animals %}
        <div class="mySlides">
            <img src="{{ animal.image }}" alt="{{ animal.name }} picture">
            <ul>
                <li>Name - {{animal.name}}</li>
                <li>Age - {{animal.age}}</li>
                <li>Sex - {{animal.sex}}</li>
                <li>Species - {{animal.species}}</li>
                <li>Date of birth - {{animal.dob}}</li>
                {% if(attribute(animal, "eat") is defined) %}
                    <button onclick="alert('{{ animal.eat() }}')">Eat</button>
                {% endif %}
                <button onclick="alert('{{ animal.do_activity() }}')">Do... something</button>
            </ul>
        </div>
    {% endfor %}
</div>

